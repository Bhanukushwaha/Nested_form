<h2>Forgot your password?</h2>
<% resource = User.new %>
<div id="resed_form" style="color: green;"></div>
<%= form_for(resource, as: resource,remote: true, url: password_path(resource), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>
