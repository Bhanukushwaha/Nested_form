<% resource = User.new %>
<%= form_for(resource, as: resource,remote: true , url: session_path(resource),:html => {:id => "login_form"}) do |f| %>
  <div class="form-group">
    <label for="recipient-name" class="col-form-label">Enter your Email:</label>
    <div id="sign_in_error" style="color: red"></div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your Email" %>
  </div>
  <div class="form-group">
    <label  class="col-form-label">Enter your Password:</label>
    <div id="password_in_error" style="color: red"></div>
    <%= f.password_field :password, autocomplete: "current-password",class: "form-control", placeholder: "Enter your password" %>
  </div>  
   <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
   </div>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-success  btn-block" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>


<script>
  $(document).ready(function() {
    $("#login_form").validate({
      rules:{
        'user[email]':
        {
          required: true,
          // checkEmail: true
        },
        'user[password]':
        {
          required: true,
          // checkUsername: true
        },        
      },
      messages:{        
        'user[email]':{
          required: "<p class='inline-errors'>Please enter email</p>",
          // checkEmail: "<p class='inline-errors'>Please enter a valid email address.</p>"
        },
        'user[password]':{
          required: "<p class='inline-errors'>Please enter password</p>",
        },
      }
    });
  });
</script>
<style>
.inline-errors{
  color: red;
}
</style>