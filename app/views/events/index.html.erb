<table id="myTable">
  <tr class="header">
    <th>No</th>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3">Action</th>
  </tr>
  <tbody>
    <% @events.each_with_index do |event, sindex| %>
      <tr>
       <td><%= sindex+1 %></td>
       <td><%= event.title %></td>
       <td><%= event.description %></td>
       <td><%= link_to "Show", event, remote: true ,class: "btn btn-outline-primary"%></td>
       <td><%= link_to "Edit", edit_event_path(event),remote: true ,class: "btn btn-outline-success"%></td>
       <td><%= button_to "Destroy", event, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table><br>
<%= link_to "New event", new_event_path,remote: true , class: "btn btn-outline-success" %>

